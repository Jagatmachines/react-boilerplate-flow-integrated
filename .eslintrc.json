{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "standard",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "semi": [2, "always"],
      "react/jsx-uses-vars": "error",
      "react/jsx-uses-react": "error",
      "space-before-function-paren": [{
        "anonymous": "always",
        "named": "always",
        "asyncArrow": "always"
      }]
    }
}
